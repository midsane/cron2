generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model News {
  id        Int        @id @default(autoincrement())
  category  String
  childNews MiniNews[]
}

model MiniNews {
  id       Int     @id @default(autoincrement())
  title    String
  link     String
  content  String?
  pubDate  String?
  source   String?
  imageUrl String?
  newsId   Int
  news     News    @relation(fields: [newsId], references: [id])
}
